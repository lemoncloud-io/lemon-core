{
  "name": "lemon-core",
  "version": "1.0.0",
  "description": "Lemon Core Bootloader with lemon-engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "!": "------------------------------------------------------------",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "doc": "npm run doc:html && open dist/docs/index.html",
    "doc:html": "typedoc src/libs --exclude **/*.spec.ts --target ES6 --mode file --out dist/docs",
    "doc:publish": "npm run doc:html && gh-pages -m \"docs(gh-pages): publish gh-pages via typedoc\" -d dist/docs",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,jsx,tsx}' --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "!test": "------- run self-test with jest -----",
    "test": "LS=1 jest --config=jest.config.json",
    "test:dev": "LS=1 jest --config=jest.config.json --watchAll",
    "!prepare": "------- run self-test with jest -----",
    "prepare": "npm run build",
    "!prepublishOnly": "npm test && npm run lint && npm run format",
    "prepublishOnly": "npm test && npm run lint",
    "-": "------------------------------------------------------------"
  },
  "husky": {
    "hooks": {
      "!pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "files": [
    "env/**",
    "dist/**/*"
  ],
  "engines": {
    "node": ">=8.10.0"
  },
  "author": "Steve Jung (steve@lemoncloud.io)",
  "license": "MIT",
  "dependencies": {
    "lemon-engine": "^2.2.3",
    "lemon-hello-api": "^1.2.3",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^3.3.1",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.12",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.130",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.8",
    "@types/request": "^2.48.1",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "aws-sdk": "^2.363.0",
    "body-parser": "^1.19.0",
    "codecov": "^3.4.0",
    "concurrently": "^4.1.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "express": "^4.16.4",
    "faker": "^4.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^8.1.6",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.0",
    "request": "^2.88.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lemoncloud-io/lemon-core.git"
  },
  "keywords": [
    "lemoncloud",
    "lemon-core"
  ],
  "bugs": {
    "url": "https://github.com/lemoncloud-io/lemon-core/issues"
  },
  "homepage": "https://github.com/lemoncloud-io/lemon-core#readme"
}
