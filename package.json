{
  "name": "lemon-core",
  "version": "2.0.10",
  "description": "Lemon Serverless Micro-Service Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "doc": "npm run doc:html && open dist/docs/index.html",
    "doc:html": "typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out dist/docs",
    "doc:publish": "npm run doc:html && gh-pages -m \"docs(gh-pages): publish gh-pages via typedoc\" -d dist/docs",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,jsx,tsx}' --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "!test": "------- run self-test with jest -----",
    "test": "LS=1 jest --config=jest.config.json",
    "test.lemon": "PROFILE=lemon LS=1 jest --config=jest.config.json",
    "test:dev": "LS=1 jest --config=jest.config.json --watchAll",
    "test:watch": "LS=1 jest --config=jest.config.json --watchAll",
    "!test:watch.": "---- custom test with profile -----",
    "test:watch.lemon": "PROFILE=lemon LS=1 jest --config=jest.config.json --watchAll",
    "!prepare": "------- run self-test with jest -----",
    "prepare": "npm run build",
    "!prepublishOnly": "npm test && npm run lint && npm run format",
    "prepublishOnly": "npm test && npm run lint",
    "!release": "---- release with standard -----",
    "release": "standard-version",
    "release.first": "npm run release --first-release",
    "release.minor": "npm run release --release-as minor"
  },
  "husky": {
    "hooks": {
      "!pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx}": [
      "npm run lint",
      "git add"
    ]
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=10.8.0"
  },
  "author": "Steve Jung <steve@lemoncloud.io>",
  "license": "MIT",
  "dependencies": {
    "@types/aws-lambda": "^8.10.36",
    "@types/elasticsearch": "^5.0.36",
    "async": "^3.1.0",
    "aws-lambda": "^0.1.2",
    "aws-sdk": "^2.578.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "elasticsearch": "^13.2.0",
    "express": "^4.16.4",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "multer": "^1.4.1",
    "query-string": "^6.9.0",
    "request": "^2.88.0",
    "source-map-support": "^0.5.16",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/async": "^3.0.3",
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.23",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.149",
    "@types/multer": "^1.3.10",
    "@types/request": "^2.48.3",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "codecov": "^3.6.1",
    "concurrently": "^5.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "gh-pages": "^2.0.1",
    "husky": "^2.2.0",
    "jest": "^24.9.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "standard-version": "^6.0.1",
    "superagent": "^5.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.2",
    "typedoc": "^0.15.3",
    "typescript": "^3.6.0"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lemoncloud-io/lemon-core.git"
  },
  "keywords": [
    "lemoncloud",
    "lemon-core",
    "serverless"
  ],
  "bugs": {
    "url": "https://github.com/lemoncloud-io/lemon-core/issues"
  },
  "homepage": "https://github.com/lemoncloud-io/lemon-core#readme"
}
