//! deleted plugins paths because of @azure/core-http issue
{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "plugins": [
            {
                "transform": "ts-transformer-keys/transformer"
            }
        ],
        "declaration": true,
        "incremental": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*",
        "**/src/**/*.spec.ts",
        "**/src/**/*.spec.js"
    ],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "tsdoc"
    }
}
